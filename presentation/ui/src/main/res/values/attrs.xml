<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandCardCustomView">
            <attr name="cardDescription" format="string"/>
        </declare-styleable>

    <declare-styleable name="PostExpandableCard">
        <attr name="postStartText" format="string"/>
        <attr name="postFullText" format="string"/>
    </declare-styleable>

    <declare-styleable name="DetailsChipCustomView">
        <attr name="workType" format="string"/>
        <attr name="location" format="string"/>
        <attr name="createdAt" format="string"/>
        <attr name="salary" format="string"/>
    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="readMoreText" format="string"/>
        <attr name="readLessText" format="string"/>
        <attr name="anchorTextColor" format="color"/>
        <attr name="isExpanded" format="boolean"/>
        <attr name="anchorPoint" format="integer"/>
        <attr name="textMode" format="enum">
            <enum name="length" value="0"/>
            <enum name="line" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="readMoreTextView" format="reference"/>

</resources>