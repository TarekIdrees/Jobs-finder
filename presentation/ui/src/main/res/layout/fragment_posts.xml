<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.cupcake.viewmodels.posts.PostsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/viewBackground"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/cards"
            android:paddingBottom="@dimen/spacing_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewProfileImage"
            style="@style/personalLargeImageStyle"
            android:layout_width="@dimen/profile_image_large_size"
            android:layout_height="@dimen/profile_image_large_size"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/test_personal_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSearchInput"
            style="@style/searchBarStyle"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/search_home_height"
            android:backgroundTint="@color/background"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewProfileImage"
            app:layout_constraintEnd_toStartOf="@+id/imageViewNotifications"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfileImage"
            app:layout_constraintTop_toTopOf="@+id/imageViewProfileImage" />

        <ImageView
            android:id="@+id/imageViewNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintBottom_toBottomOf="@+id/editTextSearchInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextSearchInput"
            app:srcCompat="@drawable/ic_bell"
            app:tint="@color/secondary" />

        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            app:layout_constraintBottom_toBottomOf="@+id/editTextSearchInput"
            app:layout_constraintStart_toStartOf="@+id/editTextSearchInput"
            app:layout_constraintTop_toTopOf="@+id/editTextSearchInput"
            app:srcCompat="@drawable/ic_search" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/viewBackground"
            android:layout_marginTop="@dimen/spacing_normal"
            app:tabIndicatorHeight="2dp"
            app:tabRippleColor="@color/cards"
            app:tabTextColor="@color/color_text_tertiary"
            app:tabSelectedTextColor="@color/primary"
            app:tabTextAppearance="@style/TextStyle.Headline_tab_layout" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_category"
            app:layout_constraintStart_toStartOf="parent"
            />




<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerViewPosts"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/zero"-->
<!--            android:background="@color/background"-->
<!--            android:clipToPadding="false"-->
<!--            android:orientation="vertical"-->
<!--            app:items="@{viewModel.state.postsResult}"-->
<!--            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            android:paddingBottom="@dimen/spacing_medium"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/viewBackground"-->
<!--            tools:listitem="@layout/item_post" />-->


        <include
            android:id="@+id/loading"
            layout="@layout/loading"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showWhenIf="@{viewModel.state.loading}"
            bind:isLoading="@{viewModel.state.loading}"
            />

        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/error"
            layout="@layout/error"
            app:showWhenIf="@{viewModel.state.error != null}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            bind:error="@{viewModel.state.error}"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTryAgain"
            style="@style/outlineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            android:text="@string/retry"
            app:showWhenIf="@{viewModel.state.error != null}"
            android:onClick="@{() -> viewModel.onRetryClicked()}"
            app:circularflow_defaultRadius="@dimen/spacing_large"
            app:layout_constraintTop_toBottomOf="@id/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>