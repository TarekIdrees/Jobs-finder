<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.cupcake.viewmodels.profile.resume.ResumeItemUiState" />

        <variable
            name="listener"
            type="com.cupcake.viewmodels.profile.resume.ResumeInteractionListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_Profile_resume_height"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginVertical="@dimen/spacing_normal"
        android:elevation="@dimen/spacing_normal"
        app:cardElevation="@dimen/spacing_normal"
        app:cardCornerRadius="@dimen/radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cards"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewResumeItem"
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/education"
                android:src="@{item.icon}" />

            <TextView
                android:id="@+id/textViewResume"
                style="@style/TextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:textColor="@color/color_text_primary"
                app:layout_constraintStart_toEndOf="@+id/imageViewResumeItem"
                app:layout_constraintTop_toTopOf="@+id/imageViewResumeItem"
                android:text="@{item.text}"
                tools:text="Education"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewAddResumeItem"
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginVertical="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/add" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

