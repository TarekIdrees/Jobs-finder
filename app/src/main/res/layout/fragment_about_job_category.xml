<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.jobs.AboutJobCategory">

        <include
            android:id="@+id/card_job_details_contract_place"
            layout="@layout/card_job_details_contract_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/spacing_medium"
            app:layout_constraintEnd_toStartOf="@+id/card_job_details_location"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/card_job_details_location"
            layout="@layout/card_job_details_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/card_job_details_work_place"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/card_job_details_contract_place"
            app:layout_constraintTop_toTopOf="@+id/card_job_details_contract_place" />

        <include
            android:id="@+id/card_job_details_work_place"
            layout="@layout/card_job_details_work_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/card_job_details_location"
            app:layout_constraintTop_toTopOf="@+id/card_job_details_location" />

        <include
            android:id="@+id/card_job_details_posted_on"
            layout="@layout/card_job_details_posted_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/spacing_medium"
            app:layout_constraintEnd_toEndOf="@+id/card_job_details_contract_place"
            app:layout_constraintStart_toStartOf="@+id/card_job_details_contract_place"
            app:layout_constraintTop_toBottomOf="@+id/card_job_details_contract_place" />

        <include
            android:id="@+id/card_job_details_salary"
            layout="@layout/card_job_details_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/card_job_details_location"
            app:layout_constraintStart_toStartOf="@+id/card_job_details_location"
            app:layout_constraintTop_toTopOf="@+id/card_job_details_posted_on" />

        <include
            android:id="@+id/include"
            layout="@layout/layout_card_expandable_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_medium"
            android:layout_marginVertical="@dimen/spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_job_details_posted_on" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>