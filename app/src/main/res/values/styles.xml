<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="TextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="TextStyle.ToolBar" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextStyle.Headline" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="TextStyle.body" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TextStyle.caption" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="TextStyle.small" parent="TextStyle">
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <style name="SharedButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="normalButtonStyle" parent="">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="searchBarStyle" parent="TextStyle.caption">
        <item name="android:background">@drawable/background_search_bar</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/spacing_xxlarge</item>
        <item name="android:paddingEnd">@dimen/spacing_xxlarge</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textColorHint">@color/tertiary</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
    </style>

    <style name="personalImageStyle">
        <item name="android:padding">@dimen/person_image_border_width</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="shapeAppearanceOverlay">@style/circleImageView</item>
        <item name="strokeWidth">@dimen/person_image_border_width</item>
        <item name="strokeColor">@color/light_border</item>
    </style>

    <style name="personalLargeImageStyle" parent="personalImageStyle">
        <item name="strokeColor">@color/tertiary</item>

    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_normal</item>
        <item name="boxBackgroundColor">@color/cards</item>
        <item name="boxStrokeWidth">@dimen/zero</item>
        <item name="boxStrokeWidthFocused">@dimen/zero</item>
    </style>

    <style name="PasswordTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconDrawable">@drawable/ic_password_toggle</item>
    </style>

</resources>